<div class="text-center">
    <h1 class="my-5"> Create New Employee </h1>

    <section class="w-50 mx-auto my-5">
        <form action="/store" method="post">
            <div class="form-group my-2">
                <label for="name" class="fw-bolder fs-5">Name</label>
                <input type="text" name="name" id="name" class="form-control">
            </div>
            <div class="form-group my-2">
                <label for="address" class="fw-bolder fs-5">Address</label>
                <input type="text" name="address" id="address" class="form-control">
            </div>
            <div class="form-group my-2">
                <label for="salarey" class="fw-bolder fs-5">Salarey</label>
                <input type="text" name="salarey" id="salarey" class="form-control">
            </div>
            <div class="form-group my-2">
                <label for="gender" class="fw-bolder fs-5">Gender</label>
                <input type="text" name="gender" id="gender" class="form-control">
            </div>
            <input type="submit" value="Add Employee" class="btn btn-lg btn-dark mt-2">
        </form>
    </section>
</div>