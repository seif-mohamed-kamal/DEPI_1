<div class="text-center">
    <h1 class="my-5"> Create New Post </h1>

    <section class="w-50 mx-auto my-5">
        <form action="/store" method="post">
            <div class="form-group my-2">
                <label for="title" class="fw-bolder fs-5">Post Title</label>
                <input type="text" name="title" id="title" class="form-control">
            </div>
            <div class="form-group my-2">
                <label for="desc" class="fw-bolder fs-5">
                    Post Description</label>
                <textarea name="desc" id="desc" class="form-control">

                </textarea>
            </div>
            <input type="submit" value="Add Post" class="btn btn-lg btn-dark mt-2">
        </form>
    </section>
</div>